{% extends "AppBundle:Layouts:layout.html.twig" %}

{# USE STYLESHEET #}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap.cosmo.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/register.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/tools.css') }}">
{% endblock %}

{# USE JAVASCRIPT #}
{% block javascripts %}
    {# ALLOW THE NEW SCRIPT DONT PUT THE PREVIOUS #}
    {{ parent() }}
