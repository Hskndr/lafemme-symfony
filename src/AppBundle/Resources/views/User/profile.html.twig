                 {{ user.nick }}
             </span>
             <div class="bio">
                 {{ user.bio }}
             </div>
             <div id="user_stats">

                 <!-- 1 -->
                 {% set user_stats = user|user_stats %}
                 <div class="following-data">
                     <a href="{{ path('following_users',{'nickname':user.nick}) }}">
