{# HEREDA DE LAYOUT #}
{% extends "AppBundle:Layouts:layout.html.twig" %}
{% block javascripts %}
    {#
        {{ parent() }}
        <script type="text/javascript" src="{{ asset('assets/js/custom/home.js') }}"></script>
    #}
{% endblock %}
{% block content %}
    <div class="col-lg-12 box-default box-notifications">
        <h1 class="box-header">
            <div class="box-content">
                {% for notification in pagination %}
                    <div class="col-lg-12 notification-item">
                        <span class="glyphicon glyphicon-info-sign"></span>
                        {#notu is: notification user#}
                        {% set notu = notification.typeId|get_user %}
                        {% if notification.type == "follow" %}
                            <a href="{{ path("user_profile",{'nickname':notu.nick}) }}">
                                {{ notu.name }} {{ notu.surname }}
                            </a>
                            is following you!
                        {% endif %}

                        {% if notification.type == "like" %}
                            <a href="{{ path("user_profile",{'nickname':notu.nick}) }}">
                                {{ notu.name }} {{ notu.surname }}
                            </a>
                            likes your publication!
                        {% endif %}
                    </div>
                {% endfor %}
                <div class="clearfix"></div>
            </div>
        </h1>
    </div>
{% endblock %}